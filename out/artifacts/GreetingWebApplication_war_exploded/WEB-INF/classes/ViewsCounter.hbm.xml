<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "entities.ViewsCounter" table = "VIEWS_COUNTER">
      
      <meta attribute = "class-description">
         This class contains the number of views of the greeting page by all users. There will be exactly one entry in the corresponding table holding this number.
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "count" column = "count" type = "int"/>
      
   </class>
</hibernate-mapping>